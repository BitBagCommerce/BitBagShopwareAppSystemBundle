<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service class="BitBag\ShopwareAppSystemBundle\EventSubscriber\LifecycleEventSubscriber"
                 id="bitbag.shopware_app_system.event_subscriber.lifecycle_event_subscriber"
        >
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="bitbag.shopware_app_system.repository.shop_repository"/>

            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
